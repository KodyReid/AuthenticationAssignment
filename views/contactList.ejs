<!--Nav+Meta Section-->

<%- include('./components/header.ejs') %>
  
<!-- Contact List Page Content -->

<main class="container">
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <h1><%= title %></h1>
        <br>
        <table class="table table-bordered table-striped table-hover">
            <!-- Table Header Row-->
            <tr>
                <th class="text-center">Name</th>
                <th class="text-center">Email</th>
                <th class="text-center">Password</th>
            </tr>

            <!-- Repeatable Template Row-->

            <% for(let count = 0; count < ContactList.length; count++){ %>
                <tr>
                    <td class="text-center"><%= ContactList[count].name %></td>
                    <td class="text-center"><%= ContactList[count].email %></td>
                    <td class="text-center"><%= ContactList[count].password %></td>
                </tr>
            <% } %>
        </table>
    </div>
</div>
</main> 

