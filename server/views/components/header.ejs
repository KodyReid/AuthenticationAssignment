<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/home"><img src="../../../public/Assets/images/logo.png" ></a>      
        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbar">
          <span class="navbar-toggler-icon"></span>
        </button>
          <div class="collapse navbar-collapse" id="navbar">     
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0"> 
              <% if (title == "Home"){ %>
                <li class="nav-item active">
                <% } else  { %>
                <li class="nav-item">
                <% } %>
                  <a class="nav-link" href="/home"><i class="fas fa-lg fa-laptop-house"></i> Home </a>
                </li>
        
                <% if (title == "About") { %>
                <li class="nav-item active">
                <% } else  { %>
                <li class="nav-item">
                <% } %>
                  <a class="nav-link" href="/about"><i class="fas fa-info-circle"></i> About </a>
                </li>
        
                <% if (title == "Products") { %>
                <li class="nav-item active">
                <% } else  { %>
                <li class="nav-item">
                <% } %>
                  <a class="nav-link" href="/projects"><i class="fas fa-project-diagram"></i> Products </a>
                </li>
        
                <% if (title == "Services") { %>
                <li class="nav-item active">
                <% } else  { %>
                <li class="nav-item">
                <% } %>
                  <a class="nav-link" href="/services"><i class="fas fa-compact-disc"></i> Services </a>
                </li>
        
                <% if (title == "Books") { %>
                <li class="nav-item active">
                <% } else  { %>
                <li class="nav-item">
                <% } %>
                  <a class="nav-link" href="/contact-list"><i class="fas fa-book"></i> Contact-List </a>
                </li>
        
                <% if (title == "Contact") { %>
                <li class="nav-item active">
